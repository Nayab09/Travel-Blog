<div class="form-group">
    <label class="title mt-4"for="title">Title</label>
    <input type="text" name="title" id="title"
    class="form-control" required value="<%= article.title%>">
<div class="form-group">
    <label for="description">Description</label>
    <textarea class ="form-control"name="description" id="description" cols="20" rows="5"><%= article.description %>
    </textarea>
</div>
<div class="form-group">
    <label for="markdown">Mark Down</label>
    <textarea required class ="form-control"name="markdown" id="markdown" cols="20" rows="5"><%= article.markdown %>
    </textarea>
</div>
    
</div>
<a href="/" class ="btn btn-secondary mt-2">Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Submit</button>